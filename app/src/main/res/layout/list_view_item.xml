<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvNewsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuộc cách mạng xe buýt điện của Trung Quốc"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/ivNewsImage"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/item_image"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tvNewsDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trung Quốc đang nỗ lực thay thế mạng lưới xe buýt diesel cũ bằng xe điện và gặt hái thành công lớn, đặc biệt ở Thâm Quyến."
                android:textSize="16sp"
                android:textColor="#4f4f4f"
                android:justificationMode="inter_word"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/tvReleaseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tue, 07 Nov 2023 00:00:00"
                android:textSize="11sp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>